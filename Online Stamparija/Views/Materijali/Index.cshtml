@model IEnumerable<Online_Stamparija.Models.Materijal>

@{
    ViewBag.Title = "Index";
}

<hr />

<div class="naslovSaPretragom container">
    <div class="row">
        <div class="col-xs-12 col-sm-3">
            <h2>Materijali</h2>
        </div>
        <div class="col-xs-10 col-sm-8">
            <div style="width:100%">
                <input type="text" name="tekstZaPretragu" id="tekstZaPretragu" oninput="materijaliPretraga(this)" />
            </div>
        </div><div class="col-xs-2 col-sm-1 pull-right">
            <img src="~/Images/search.png" />
        </div>
    </div>
</div>

<div id="materijaliDiv">

    @foreach(var item in Model)
    {
        var u = (item.Kolicina < 10) ? "upozorenje1" : "";
        <div class="okvir @u header">
            <div class="container">
                <div class="header row">
                    <h3 class="col-xs-8 col-sm-6">
                        @Html.DisplayFor(model => item.Naziv)
                    </h3>
                    <div class="col-xs-4 col-sm-6">
                        <h3 class="pull-right">
                            @Html.DisplayFor(model => item.Kolicina)
                        </h3>
                    </div>
                </div>
            </div>
            <hr />

            <table class="footer floatRight">
                <tr>
                    <td class="sirokaKolona">
                        <a href="javascript:PokaziPosloveZaMaterijal(@item.ID)">
                            <img src="/Images/posao.C.png" alt="at" class="iconButton" />
                            <span>Poslovi</span>
                        </a>
                    </td>
                    <td class="sirokaKolona">
                        <a href="@Url.Action("Edit", new { id = item.ID })">
                            <img src="/Images/olovka.png" alt="olovka" class="iconButton" />
                            <span>Uredi</span>
                        </a>
                    </td>
                    <td class="sirokaKolona">
                        <a href="@Url.Action("Delete", new { id = item.ID })">
                            <img src="~/Images/appbar.delete.png" alt="at" class="iconButton" />
                            <span>Obriši</span>
                        </a>
                    </td>
                    <td class="sirokaKolona">
                        <a href="@Url.Action("Details", new { id = item.ID })">
                            <img src="~/Images/about.C.png" alt="at" class="iconButton" />
                            <span>Detalji</span>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    }
</div>
