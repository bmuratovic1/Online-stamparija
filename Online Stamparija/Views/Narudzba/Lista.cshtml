@model IEnumerable<Online_Stamparija.Models.Narudzba>

@{
    ViewBag.Title = "Lista";
}

<hr />
<h2>Lista</h2>

<p>
    @Html.ActionLink("Pošalji novu narudžbu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazivKorisnika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojTelefona)
        </th>
