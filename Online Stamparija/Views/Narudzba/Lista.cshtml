        <th>
            @Html.DisplayNameFor(model => model.brojKomada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vrijemeIsporuke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazivFajla)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazivKorisnika)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojTelefona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Napomena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brojKomada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vrijemeIsporuke)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NazivFajla)
        </td>
        
        <td>
            @if(Online_Stamparija.Models.LogovaniKorisnik.Instanca.Pozicija == 3) 
            { 
                @Html.ActionLink("Uredi", "Edit", new { id=item.ID })
            }
            @Html.ActionLink("Detaljan prikaz", "Details", new { id=item.ID }) |
           
        </td>
    </tr>
}

</table>
