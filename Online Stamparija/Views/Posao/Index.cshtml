@model IEnumerable<Online_Stamparija.Models.Posao>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("Upozorenja/Greska", (TempData["Error"]??"").ToString())
<h2>Index</h2>

<p>
    @Html.ActionLink("+ Novi posao", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrijemeTrajanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrstaMaterijala)
        </th>
