<div class="container">
    <div class="row navbar-fixed-top navbar-inverse">
        <div class="row">
            @foreach(var dugme in Online_Stamparija.StandardniUiElementi.glavnaDugmad)
            {
                if(Online_Stamparija.Models.LogovaniKorisnik.Instanca.Logovan && Online_Stamparija.Models.LogovaniKorisnik.Instanca.Pozicija <= (int)dugme.MinimumAllowedPosition)
                {
                    <div class="metroButton hidden-xs col-sm-1">
                        <a href="@dugme.LinkUrl">
                            <img src="@dugme.ImageUrl" title="@dugme.Title" />
                            @if(dugme.Upozorenje){
                                <img src="~/Images/u1.png" style="position:absolute; right:0; bottom:0; width:32px; height:32px"/>
                            }
                        </a>
                    </div>
                }
            }
            @if(Online_Stamparija.Models.LogovaniKorisnik.Instanca.UserName != null)
            {
                <div class="hidden-xs col pull-right">
                    <table>
                        <tr>
                            <td>
                                <h3 style="color:white">Dobro došao <a href="/Users/Profile"> @Online_Stamparija.Models.LogovaniKorisnik.Instanca.UserName</a></h3>
                            </td>
                            <td>
                                <a href="@Url.Action("Logout", "Account")">
                                    <img src="~/Images/logout.B.png" title="Logout" />
                                </a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-12 hidden-lg hidden-md hidden-sm">
                    <div class="row">
                        <div class="col-xs-8">
                            <h3 style="color:white">&nbsp;&nbsp;Dobro došao <a href="/Users/Profile">@Online_Stamparija.Models.LogovaniKorisnik.Instanca.UserName</a></h3>
                        </div>
                        <div class="col-xs-4 pull-right">
                            <a href="@Url.Action("Logout", "Account")">
                                <img src="~/Images/logout.B.png" title="Logout" />
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

