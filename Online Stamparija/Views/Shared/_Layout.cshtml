<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Stamparija</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <table>
            <tr>
                <td>
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Online Stamparija", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Početna", "Index", "Home")</li>
                            <li>@Html.ActionLink("O nama", "About", "Home")</li>
                            <li>@Html.ActionLink("Kontakti", "Contact", "Home")</li>
                        </ul>
                    </div>
                </td>
                <td>
                    <div>
                        @if(Online_Stamparija.Models.LogovaniKorisnik.Instanca.UserName == null)
                        {
                            @Html.Partial("Login", new Online_Stamparija.Models.Korisnik());
                        }
                        else
                        {
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li style="color:white"><h3>Dobro dosao @Online_Stamparija.Models.LogovaniKorisnik.Instanca.UserName</h3></li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Account");</li>
                                </ul>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Stamparija</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required : false)
</body>
</html>
