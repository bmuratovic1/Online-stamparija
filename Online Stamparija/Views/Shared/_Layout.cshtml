<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Stamparija</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Content/funcije.js"></script>
</head>
<body>
    @Html.Partial("Trake/Vrh")
    <div class="container">
        <div class="row">
            @if(Online_Stamparija.Models.LogovaniKorisnik.Instanca.Logovan)
            {
                <div class="col-xs-10">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Online Stamparija</p>
                    </footer>
                </div>
                <div class="col-xs-2">
                    @Html.Partial("Trake/Bok")
                </div>
            }
            else
            {
                <div class="col-xs-12">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Online Stamparija</p>
                    </footer>
                </div>
            }
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required : false)

</body>
</html>
